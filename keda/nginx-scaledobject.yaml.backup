apiVersion: keda.sh/v1alpha1
kind: ScaledObject
metadata:
  name: nginx-cpu-scaler
  namespace: webapps-helm
spec:
  scaleTargetRef:
    # Target de Helm deployment van NGINX
    apiVersion: apps/v1
    kind: Deployment
    name: nginx-reverse-proxy
  minReplicaCount: 1 
  maxReplicaCount: 10
  pollingInterval: 30
  triggers:
  - type: cpu
    metadata:
      # Type moet 'Utilization' zijn (gemiddeld percentage)
      type: Utilization
      # De waarde (als string)
      value: "70"
